name: Scrapper App CI/CD Staging

on:
  push:
    branches: [staging]
    paths:
      - 'scraper-service/**'
  workflow_dispatch:  # Add this for manual testing

env:
  SCRAPPER_CONTAINER_NAME: redact
  SCRAPPER_IMAGE_NAME: redact
  RESOURCE_GROUP: redact
  IMAGE_NAME: redact

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Login to Azure
      uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}

    - name: Login to Azure Container Registry
      run: |
        az acr login --name ${{ secrets.ACR_NAME_STAGING }}

    - name: Build and push Docker image
      run: |
        cd flaskapp
        docker build -t ${{ env.IMAGE_NAME }}.azurecr.io/${{ env.SCRAPPER_IMAGE_NAME }}:${{ github.sha }} .
        docker push ${{ env.IMAGE_NAME }}.azurecr.io/${{ env.SCRAPPER_IMAGE_NAME }}:${{ github.sha }}

    - name: Update Container App
      run: |
        az containerapp update \
          --name ${{ env.SCRAPPER_CONTAINER_NAME }} \
          --resource-group ${{ env.RESOURCE_GROUP }} \
          --image ${{ env.IMAGE_NAME }}.azurecr.io/${{ env.SCRAPPER_IMAGE_NAME }}:${{ github.sha }}
